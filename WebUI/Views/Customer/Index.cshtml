@model IEnumerable<Models.Customer>

@{
    ViewData["Title"] = "Customer";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "fas fa-edit" }) |
                @Html.ActionLink("Details", "Details", new { name = item.Name }) |

                @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "fas fa-trash-alt" }) |
                @Html.ActionLink("OrderHistory", "OrderHistory", new { id = item.Id })

            </td>
        </tr>
}
    </tbody>
</table>
